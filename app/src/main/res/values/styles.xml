<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/flamingo</item>
        <item name="colorPrimaryDark">@color/golden_dream</item>
        <item name="colorAccent">@color/flamingo</item>
    </style>

    <style name="CustomMaterialDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="materialAlertDialogTitleTextStyle">@style/CustomMaterialDialogTitle</item>
        <item name="materialAlertDialogBodyTextStyle">@style/CustomMaterialDialogBody</item>
    </style>

    <style name="CustomMaterialDialogTitle" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CustomMaterialDialogBody">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>
